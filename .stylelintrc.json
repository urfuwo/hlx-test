{
  "extends": [
    "stylelint-config-standard"
  ],
  "rules": {
    "custom-property-pattern": [
      "^(.*)$",
      {
        "message": "Expected custom property does not match pattern"
      }
    ],
    "comment-empty-line-before": [
      "always",
      {
        "except": [
          "first-nested"
        ],
        "ignore": [
          "stylelint-commands"
        ]
      }
    ]
  }
}
